<% include ../layouts/header.ejs %>

<br><br>


<div class="card">
    <div class="card-header">
        Book form
    </div>
    <div class="card-body">
        <h5 class="card-title">Update book data</h5>
        <p class="card-text">


            <form method="post" action="../update/" enctype="multipart/form-data">


                <div class="form-group">
                    <label for="my-input">Name:</label>
                    <input id="my-input"  value="<%=book.name%>" class="form-control" type="text" name="name">
                </div>
            
                <div class="form-group">
                    <label for="my-input">Image:</label>
                    <img class="img-thumbnail" src="../../images/<%=book.image%>" width="100">
                    <input id="my-input" class="form-control-file" type="file" name="archive">
                </div>
            
            
                <button class="btn btn-success" type="submit">Update</button>
                <a class="btn btn-danger" href="/books">Cancel</a>

            </form>

        </p>
    </div>
</div>





